<%= link_to "使用者資料" %>
<%= link_to "分類管理", admin_categories_path %>

<%= form_for [:admin,@user] do |f| %>
    <%= f.label :intro, "個人簡介" %>
    <%= f.text_field :intro %>
    身份：<%= f.select :role, [["一般使用者","user1"],["管理員","admin"]]%>
    <%= f.submit "送出" ,:class => "btn btn-primary"%>
    <%= link_to '取消', admin_users_path, :class => "btn btn-warning"  %>

<% end %>



<table class = "table">

<%  @users.each do |u| %>

	<tr>

		<td><%=u.email%></td>

		<td><%=u.intro%></td>

		<td><%=u.role%></td>

		<td><%= link_to "編輯", admin_users_path(:uid => u) %></td>
		
	<tr>



<% end %>

</table> 