

<table class="table table-bordered text-left ">

<tr>

<td>排序：<%= link_to "最後回覆", merge_topics_params( :order => "latesttime" ) %> | <%= link_to "最多人回覆", merge_topics_params( :order => "num" ) %> | <%= link_to "瀏覽人數", merge_topics_params( :order => "view" ) %></td>

<td>作者</td>

<td>回覆/瀏覽人數</td>

<td>最後回覆</td>

</tr>

<% @topics.each do |t| %>

<tr>
  
	<td>
  <% t.categories.each do |c| %>
  <%= link_to "[#{c.name}]",topics_path(:cid =>c.id) %>
  <% end %>
	<%= link_to t.title, topic_path(t),:class =>"list-title" %>

	</td>
	<td><%= link_to t.user.try(:short_name), user_path(t.user)%></td>
	<td><%= t.comments_count %> / <%=t.view_counter%> </td>
	<td><%= t.last_commented_at %></td>

</tr>

<% end %>

</table>
<%= paginate @topics %>
