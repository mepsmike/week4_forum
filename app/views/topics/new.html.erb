<%= form_for @topic do |f|%>

<div class="form-group">
<%= f.label :title, "標題" %>
<%=f.text_field :title ,:class => "form-control"%>
</div>
<div class="form-group">
<%= f.label :content, "內容" %>
<%= f.text_area :content ,:class => "form-control"%>
</div>
<div class="form-group">
分類：<%= f.collection_check_boxes(:category_ids, Category.all, :id, :name) %>
</div>
<%= f.submit "發布" ,:class =>"btn btn-success"%>


<% end %>