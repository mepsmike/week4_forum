
<% if @user == current_user %>

	<%= link_to "發佈的文章", :uid => current_user,:status => :t %>
	<%= link_to "草稿夾", :uid => current_user,:status => :f %>

<%else%>

<h3><%=@user.email%></h3>
	<div class="panel panel-success">
		<div class="panel-heading">
		個人介紹
		</div>
